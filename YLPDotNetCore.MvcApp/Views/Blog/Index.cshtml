@model List<BlogModel>;

@{
    ViewData["Title"]= "Blog";
    int count = 0;
}



<section class="border rounded-2 m-5 p-5">
    <div class="d-flex justify-content-between">
        <div>
            <h2 class="mb-5 d-inline-block"> Lists </h2>
            <h4 class="ms-3 d-inline-block text-primary">@Model.Count</h4>
        </div>
        <div>
            <a href="Blog/Create" class=" btn btn-success">New</a>
        </div>
    </div>
    <table class="table table-responsive">
        <tr>
            <th>Actions</th>
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
        <tbody>
            @foreach (BlogModel item in Model)
            {
                <tr>
                    <td>
                        <a href="/Blog/Edit/@item.BlogId" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a href="/Blog/Delete/@item.BlogId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                    <td>@(++count)</td>
                    <td>@item.BlogTitle</td>
                    <td>@item.BlogAuthor</td>
                    <td>@item.BlogContent</td>
                </tr>                  
            }
        </tbody>
    </table>
    

</section>

